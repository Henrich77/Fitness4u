<div class="profile-div">
    <div class="row">
    <div class="col-auto">
        <h2 class="is-size-2" style="text-align: center; color:red;font-family:'Contrail One', cursive;">Welcome, {{name}}!</h2>
    </div>
    </div>

    <div class="custom-plans is-flex-direction-row">
        <h4 class="is-size-3" style="color: white;font-family:'Contrail One', cursive;">All Plans</h4> 
        <button class="button is-small is-primary" id='show-plans' style="color: black;font-family:'Contrail One', cursive; background-color:red">SHOW PLANS</button>
        <h4 class="is-size-3" style="color: white;font-family:'Contrail One', cursive;">My Plans</h4> 
        {{#if plans.length}}
        
        <button class="button is-small is-primary" id='show-my-plans' style="color: black;font-family:'Contrail One', cursive; background-color:red">SHOW MY PLANS</button>        

        <div class="col-md-6 plan-list">
        

        {{#each plans as |plan|}}
        <div class="row mb-2">
        <div class="col-md-8">
            <h4 class="is-size-4" style="color: rgb(255, 255, 255);font-family:'Contrail One', cursive;">{{plan.plan_name}}</a></h4>
        </div>
        <div class="col-md-4">                    
            <button class="button is-small is-primary" data-id="{{plan.id}}" style="color:black; background-color:red;font-family:'Contrail One', cursive;">DELETE</button>            
        </div>
        </div>
        {{/each}}
        </div>
        {{else}}
        <p class="is-size-7" style="color: white">You don't have any personalized plans! Why not create one below?</p>
        {{/if}}

    </div>

    <form class="col-md-6" class="form plan-create-form" id="plan-create-form">
        <h3 class="is-size-3" style="margin-top: 5rem;" style="color: white;font-family:'Contrail One', cursive;">Create New Plan</h3>
        <div style="display: flex; justify-content:center">
            <h3 class="is-size-4 has-text-weight-semibold" style="margin-top: 2rem;" style="color: white;font-family:'Contrail One', cursive;">Plan Name *</h3>
            <input class="input is-info is-small" id="plan-name" type="text" placeholder="Name Your Plan" style="width: 300px;margin-top:2rem">
        </div>
        
        
        <div style="display: flex;">
   
        <div class="card cards">
             <header class="card-header">
            <p class="card-header-title" style="color: white;font-family:'Contrail One', cursive;">
                 First Workout *
             </p>
        </header>
         <div class="card-content">
        <div class="content">
            <input class="input is-info is-small" id="first-workout" type="text" placeholder="workout 1">


        </div>
